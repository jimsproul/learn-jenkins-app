pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }

            }
            steps {
                sh '''
                    echo 'Hello World!'
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                ''',
                sh '''
                    if [ -e ./build/index.html ]
                    then
                        echo "ok"
                    else
                        echo "nok"
                    fi
                    npm test
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                        echo "ok"
                    '''
            }
        }   
    }
}
